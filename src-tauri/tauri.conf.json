{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": false
  },
  "package": {
    "productName": "nvm-desk",
    "version": "0.0.1"
  },
  "tauri": {
    "systemTray": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": true
    },
    "allowlist": {
      "all": true,
      "fs": {
        "all": true,
        "scope": ["$APPDATA/Roadming/nvm"]
      },
      "shell": {
        "all": true,
        "open": true,
        "execute": true,
        "sidecar": true,
        "scope": [
          {
            "name": "nvm-ls",
            "cmd": "nvm",
            "args": ["ls"]
          },
          {
            "name": "nvm-apply",
            "cmd": "nvm",
            "args": ["use", {"validator": "\\S+"}]
          },
          {
            "name": "nvm-install",
            "cmd": "$RESOURCE/install/nvm-setup.exe"
          }
        ]
      }
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.tauri.dev",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "resources": ["install"]
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "nvm-dest",
        "width": 450,
        "height": 450
      }
    ]
  }
}
