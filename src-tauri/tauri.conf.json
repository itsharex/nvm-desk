{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "package": {
    "productName": "nvm-desk",
    "version": "0.0.1"
  },
  "tauri": {
    "systemTray": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": true
    },
    "allowlist": {
      "all": true,
      "os": {
        "all": true
      },
      "fs": {
        "all": true
      },
      "notification": {
        "all": true
      },
      "shell": {
        "all": true,
        "open": true,
        "execute": true,
        "sidecar": true,
        "scope": [
          {
            "name": "nvm-ls",
            "cmd": "nvm",
            "args": [
              "ls"
            ]
          },
          {
            "name": "nvm-apply",
            "cmd": "nvm",
            "args": [
              {
                "validator": "\\S+"
              },
              {
                "validator": "\\S+"
              }
            ]
          },
          {
            "name": "nvm-install",
            "cmd": "$RESOURCE/install/nvm-setup.exe"
          }
        ]
      }
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.dev.kdydesign",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "decorations": false,
        "fullscreen": false,
        "resizable": false,
        "title": "nvm-desk",
        "width": 750,
        "height": 494
      }
    ]
  }
}
